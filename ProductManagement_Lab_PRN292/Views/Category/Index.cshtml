@model IEnumerable<ProductManagement_Lab_PRN292.Entities.Category>

@{
    ViewData["Title"] = "Index";
}

<h1> <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="Index">Category</a></h1>

<p>
    <a asp-action="Create">Create New Category</a>
</p>
<form asp-controller="Category" asp-action="Index" method="post">
    <p>
        Category Name: <input type="text" name="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
