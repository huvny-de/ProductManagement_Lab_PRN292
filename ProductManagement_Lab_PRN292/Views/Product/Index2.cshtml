@model ProductManagement_Lab_PRN292.Models.ListProductByCategoryViewModel

@{
    ViewData["Title"] = "ProductByCategory";
}

<h1>ProductByCategory</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Product" asp-action="Index2" method="get">
    <p>

        <select asp-for="ProductCategory" asp-items="Model.Categories">
            <option value="all">All</option>
        </select>

        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].Photo)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.Products[0].CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                <img src="~/images/@item.Photo" width="150" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProductId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ProductId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ProductId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
