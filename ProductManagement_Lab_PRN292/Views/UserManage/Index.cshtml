@model IEnumerable<ProductManagement_Lab_PRN292.Models.UserManageViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>

            <th>
                User Name
            </th>
            <th>
                Full Name
            </th>
            <th>
                Email
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Age
            </th>
            @*<th>
                    Role
                </th>*@
            <th>
                Status
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName) @item.LastName
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @*@Html.DisplayFor(modelItem => item.Dob)*@
                    @{
                        int now = int.Parse(DateTime.Now.ToString("yyyyMMdd"));
                        int dob = int.Parse(item.Dob.ToString("yyyyMMdd"));
                        int age = (now - dob) / 10000;
                    }
                    @*@Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.Dob))*@
                    @age
                </td>
                <td>
                    @{
                        string Status = "";

                        if (item.Lockout)
                        {
                            Status = "Suspended";
                        }
                        else { Status = "Active"; }
                    }
                    @Status
                </td>
                <td>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
